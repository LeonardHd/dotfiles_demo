{{- /* Checks if running interactively, which is not the case for GitHub Codespaces */ -}}
{{- $interactive := stdinIsATTY -}}

{{- /* Initializes the name variable with a default value */ -}}
{{- $name := "Example User" -}}

{{- /* Does the same for the email */ -}}
{{- $email := "example@example.com" -}}

sourceDir = {{ .chezmoi.sourceDir | quote }}

[data]
    name = {{ $name | quote }}
    email = {{ $email | quote }}

[merge]
command = "bash"
args = [
    "-c",
    "cp {{ "{{" }} .Target | quote {{ "}}" }} {{ "{{" }} printf \"%s.base\" .Target | quote {{ "}}" }} && code --new-window --wait --merge {{ "{{" }} .Destination | quote {{ "}}" }} {{ "{{" }} .Target | quote {{ "}}" }} {{ "{{" }} printf \"%s.base\" .Target | quote {{ "}}" }} {{ "{{" }} .Source | quote {{ "}}" }}",
]
